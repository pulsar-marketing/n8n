FROM n8nio/runners:latest

# Root bleiben für Installation
USER root

# Arbeitsverzeichnis
WORKDIR /home/node

# Als node user ausführen (sicherer)
#USER node

# Healthcheck
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD node -e "console.log('Runner healthy')" || exit 1